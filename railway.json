{
  "builds": [
    {
      "src": "backend",
      "build": "pip install -r requirements.txt"
    },
    {
      "src": "frontend",
      "build": "npm install && npm run build"
    }
  ],
  "deploy": {
    "backend": "uvicorn main:app --host 0.0.0.0 --port 8000",
    "frontend": "npx serve -s dist"
  }
}
